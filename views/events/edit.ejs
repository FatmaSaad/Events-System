<html lang="en">
	<head>
		<title>Login V13</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!--===============================================================================================-->
		<link rel="icon" type="image/png" href="/public/events/images/bg-01.jpg" />
		<!--===============================================================================================-->
		<link
			rel="stylesheet"
			type="text/css"
			href="vendor/bootstrap/css/bootstrap.min.css"
		/>
		<!--===============================================================================================-->
		<link
			rel="stylesheet"
			type="text/css"
			href="fonts/font-awesome-4.7.0/css/font-awesome.min.css"
		/>
		<!--===============================================================================================-->
		<link
			rel="stylesheet"
			type="text/css"
			href="fonts/Linearicons-Free-v1.0.0/icon-font.min.css"
		/>
		<!--===============================================================================================-->
		<link
			rel="stylesheet"
			type="text/css"
			href="fonts/iconic/css/material-design-iconic-font.min.css"
		/>
		<!--===============================================================================================-->
		<link rel="stylesheet" type="text/css" href="vendor/animate/animate.css" />
		<!--===============================================================================================-->
		<link
			rel="stylesheet"
			type="text/css"
			href="vendor/css-hamburgers/hamburgers.min.css"
		/>
		<!--===============================================================================================-->
		<link
			rel="stylesheet"
			type="text/css"
			href="vendor/animsition/css/animsition.min.css"
		/>
		<!--===============================================================================================-->
		<link
			rel="stylesheet"
			type="text/css"
			href="vendor/select2/select2.min.css"
		/>
		<!--===============================================================================================-->
		<link
			rel="stylesheet"
			type="text/css"
			href="vendor/daterangepicker/daterangepicker.css"
		/>
		<!--===============================================================================================-->
		<link rel="stylesheet" type="text/css" href="css/util.css" />
		<link rel="stylesheet" type="text/css" href="css/main.css" />
		<!--===============================================================================================-->
		<%- include( "../partials/header") -%>
	</head>
	<body style="background-color: #999999;">
		<div class="limiter">
			<div class="container-login100">
				<div
					class="login100-more"
					style="background-image: url('images/bg-01.jpg');"
				></div>

				<div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
					<form
						action="/events/update"
						method="POST"
						class="login100-form validate-form"
					>
						<span class="login100-form-title p-b-59">
							AddEvent
						</span>
						<div
							class="wrap-input100 validate-input"
							data-validate="id is required"
						>
							<span class="label-input100"> ID</span>
							<input
								class="input100"
								type="hidden"
								name="id"
								value="<%= event._id%>"
								placeholder="id..."
							/>
							<span class="focus-input100"></span>
						</div>

						<div
							class="wrap-input100 validate-input"
							data-validate="Name is required"
						>
							<span class="label-input100">Title</span>
							<input
								class="input100"
								type="text"
								name="title"
								placeholder="title..." 
								value="<%= event._title %>"
							/>
							<span class="focus-input100"></span>
						</div>

						<div
							class="wrap-input100 validate-input"
							data-validate="Valid email is required: ex@abc.xyz"
						>
							<span class="label-input100">event Date</span>
							<input
								class="input100"
								type="date"
								name="eventDate"
								value="<%= event._eventDate%>"
								placeholder="event Date..."
							/>
							<span class="focus-input100"></span>
						</div>

						<div
							class="wrap-input100 validate-input"
							data-validate="Username is required"
						>
							<span class="label-input100">main Speaker</span>
							<select
								name="mainSpeaker"
								class="custom-select custom-select-lg mb-3">
								<option disabled>Select the main Speaker</option>
								<% for(var i=0; i < speakerData.length; i++) 
								{ 
								 if(speakerData[i]._id== event._mainSpeaker){%>

								<option selected value="<%= speakerData[i]._id %>"
									><%= speakerData[i]._name %></option
								>
								<% }else{ %>
								<option value="<%= speakerData[i]._id %>"
									><%= speakerData[i]._name %></option>
								<% } 
							} %>
							</select>
							<span class="focus-input100"></span>
						</div>
						<div
							class="wrap-input100 validate-input"
							data-validate="Valid email is required: ex@abc.xyz"
						>
							<span class="label-input100">Other Speakers</span>
							<select class="form-control" name="OtherSpeakers" multiple>
								<option disabled>Select Other Speakers</option>
								<%	 for(var j=0; j< event._otherSpeakers.length; j++) { %>

								<% for(var i=0; i < speakerData.length; i++) {%>
									
								<% if(speakerData[i]._id == event._otherSpeakers[j]){ %>

								 <option selected value="<%= speakerData[i]._id %>"> <%= speakerData[i]._name %> </option>
								<% }else{ %>
								<option value="<%= speakerData[i]._id %>"> <%= speakerData[i]._name %> </option>
								<% } }} %>
							</select>
						</div>
						<div class="container-login100-form-btn">
							<div class="wrap-login100-form-btn">
								<div class="login100-form-bgbtn"></div>
								<button type="submit" value="update" class="login100-form-btn">
									Add Event
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>

		<!--===============================================================================================-->
		<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
		<!--===============================================================================================-->
		<script src="vendor/animsition/js/animsition.min.js"></script>
		<!--===============================================================================================-->
		<script src="vendor/bootstrap/js/popper.js"></script>
		<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
		<!--===============================================================================================-->
		<script src="vendor/select2/select2.min.js"></script>
		<!--===============================================================================================-->
		<script src="vendor/daterangepicker/moment.min.js"></script>
		<script src="vendor/daterangepicker/daterangepicker.js"></script>
		<!--===============================================================================================-->
		<script src="vendor/countdowntime/countdowntime.js"></script>
		<!--===============================================================================================-->
		<script src="/js/main.js"></script>
	</body>
</html>
